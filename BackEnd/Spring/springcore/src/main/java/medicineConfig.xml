<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
 http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- This Configuration for set -->

	<bean id="medicine"
		class="com.capgemini.springcore.beans.Medicine">
		<property name="name" value="Crocine"></property>
		<property name="price" value="50.25"></property>
		<property name="type" value="allopathic"></property>
		<property name="drugsSet">
			<set>
				<value>FGSGDJD</value>
				<value>DSHDS</value>
				<value>HSFG</value>
			</set>
		</property>
	</bean>


